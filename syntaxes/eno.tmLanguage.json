{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "eno",
	"patterns": [
		{ "include": "#comment" },
		{ "include": "#name" },
		{ "include": "#field" },
		{ "include": "#listItem" },
		{ "include": "#fieldsetEntry" },
		{ "include": "#block" },
		{ "include": "#continuation" },
		{ "include": "#section" },
		{ "include": "#copy" },
		{ "include": "#escapedName" },
		{ "include": "#escapedField" },
		{ "include": "#escapedFieldsetEntry" },
		{ "include": "#escapedSection" },
		{ "include": "#escapedCopy" },
		{ "include": "#illegal" }
	],
	"repository": {
		"block": {
			"comment": "-- name",
			"begin": "^\\s*(-{2,})(?!-)\\s*(.+?)\\s*$",
			"beginCaptures": {
				"1": { "name": "entity.name.function.operator.block.eno" },
				"2": { "name": "keyword.name.block.eno" }
			},
			"contentName": "value.eno",
			"end": "^\\s*(\\1)\\s*(\\2)\\s*$",
			"endCaptures": {
				"1": { "name": "entity.name.function.operator.block.eno" },
				"2": { "name": "keyword.name.block.eno" }
			},
			"patterns": []
		},
		"comment": {
			"comment": "> comment",
			"match": "^\\s*(>).*$",
			"name": "comment.line.eno",
			"captures": {
				"1": { "name": "punctuation.definition.comment.eno" }
			},
			"patterns": []
		},
		"continuation": {
			"comment": "| value OR \\ value",
			"match": "^\\s*([\\\\|])(?![\\\\|])\\s*(.+?)?\\s*$",
			"captures": {
				"1": { "name": "entity.name.function.operator.continuation.eno" },
				"2": { "name": "value.eno" }
			},
			"patterns": []
		},
		"copy": {
			"comment": "name < template",
			"match": "^\\s*(?![>\\-#\\\\|`])([^<=:]+?)\\s*(<)\\s*(\\S.*?)\\s*$",
			"captures": {
				"1": { "name": "keyword.name.element.eno" },
				"2": { "name": "entity.name.function.operator.copy.eno" },
				"3": { "name": "entity.other.inherited-class.template.eno" }
			},
			"patterns": []
		},
		"fieldsetEntry": {
			"comment": "name = value",
			"match": "^\\s*(?![>\\-#\\\\|`])([^<=:]+?)\\s*(=)\\s*(.+?)?\\s*$",
			"captures": {
				"1": { "name": "entity.other.attribute-name.fieldset-entry.eno" },
				"2": { "name": "entity.name.function.operator.fieldset-entry.eno" },
				"3": { "name": "value.eno" }
			},
			"patterns": []
		},
		"escapedCopy": {
			"comment": "`name` < template",
			"match": "^\\s*(`+)\\s*((?:(?!\\1).)+)\\s*(\\1)\\s*(<)\\s*(\\S.*?)\\s*$",
			"captures": {
				"1": { "name": "entity.name.function.operator.escape.begin.eno" },
				"2": { "name": "keyword.name.element.eno" },
				"3": { "name": "entity.name.function.operator.escape.end.eno" },
				"4": { "name": "entity.name.function.operator.copy.eno" },
				"5": { "name": "entity.other.inherited-class.template.eno" }
			},
			"patterns": []
		},
		"escapedFieldsetEntry": {
			"comment": "`name` = value",
			"match": "^\\s*(`+)\\s*((?:(?!\\1).)+)\\s*(\\1)\\s*(=)\\s*(.+?)?\\s*$",
			"captures": {
				"1": { "name": "entity.name.function.operator.escape.begin.eno" },
				"2": { "name": "entity.other.attribute-name.fieldset-entry.eno" },
				"3": { "name": "entity.name.function.operator.escape.end.eno" },
				"4": { "name": "entity.name.function.operator.fieldset-entry.eno" },
				"5": { "name": "value.eno" }
			},
			"patterns": []
		},
		"escapedField": {
			"comment": "`name`: value",
			"match": "^\\s*(`+)\\s*((?:(?!\\1).)+)\\s*(\\1)\\s*(:)\\s*(\\S.*?)\\s*$",
			"captures": {
				"1": { "name": "entity.name.function.operator.escape.begin.eno" },
				"2": { "name": "keyword.name.field.eno" },
				"3": { "name": "entity.name.function.operator.escape.end.eno" },
				"4": { "name": "entity.name.function.operator.name.eno" },
				"5": { "name": "value.eno" }
			},
			"patterns": []
		},
		"escapedName": {
			"comment": "`name`:",
			"match": "^\\s*(`+)\\s*((?:(?!\\1).)+)\\s*(\\1)\\s*(:)\\s*$",
			"captures": {
				"1": { "name": "entity.name.function.operator.escape.begin.eno" },
				"2": { "name": "keyword.name.element.eno" },
				"3": { "name": "entity.name.function.operator.escape.end.eno" },
				"4": { "name": "entity.name.function.operator.name.eno" }
			},
			"patterns": []
		},
		"escapedSection": {
			"comment": "# `section` [[<]< section]",
			"match": "^\\s*+(#++)\\s*(`+)\\s*((?:(?!\\2).)+)\\s*(\\2)\\s*(?:(<(?!<)|<<)\\s*(\\S.*?)\\s*)?$",
			"captures": {
				"1": { "name": "storage.type.section.eno" },
				"2": { "name": "entity.name.function.operator.escape.begin.eno" },
				"3": { "name": "keyword.name.section.eno" },
				"4": { "name": "entity.name.function.operator.escape.end.eno" },
				"5": { "name": "entity.name.function.operator.copy.eno" },
				"6": { "name": "entity.other.inherited-class.template.eno" }
			},
			"patterns": []
		},
		"field": {
			"comment": "name: value",
			"match": "^\\s*(?![>\\-#\\\\|`])([^<=:]+?)\\s*(:)\\s*(\\S.*?)\\s*$",
			"captures": {
				"1": { "name": "keyword.name.field.eno" },
				"2": { "name": "entity.name.function.operator.name.eno" },
				"3": { "name": "value.eno" }
			},
			"patterns": []
		},
		"illegal": {
			"match": "^\\s*(\\S.*+)\\s*$",
			"captures": {
				"1": { "name": "invalid.illegal.eno" }
			},
			"patterns": []
		},
		"listItem": {
			"comment": "- value",
			"match": "^\\s*(-)(?!-)\\s*(.+?)?\\s*$",
			"captures": {
				"1": { "name": "entity.name.function.operator.list-item.eno" },
				"2": { "name": "value.eno" }
			},
			"patterns": []
		},
		"name": {
			"comment": "name:",
			"match": "^\\s*(?![>\\-#=:*\\\\|`])([^<=:]+?)\\s*(:)\\s*$",
			"captures": {
				"1": { "name": "keyword.name.element.eno" },
				"2": { "name": "entity.name.function.operator.name.eno" }
			},
			"patterns": []
		},
		"section": {
			"comment": "# section [[<]< section]",
			"match": "^\\s*+(#++)\\s*([^\\s<`][^<]*?)\\s*(?:(<(?!<)|<<)\\s*(\\S.*?)\\s*)?$",
			"captures": {
				"1": { "name": "storage.type.section.eno" },
				"2": { "name": "keyword.name.section.eno" },
				"3": { "name": "entity.name.function.operator.copy.eno" },
				"4": { "name": "entity.other.inherited-class.template.eno" }
			},
			"patterns": []
		}
	},
	"scopeName": "text.eno"
}
